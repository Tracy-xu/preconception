.c-voice-box__btn{width:50rpx;height:50rpx;background-size:100% 100%;background-image:url('http://122.112.239.223:13000/xuwenbo/preconception/raw/master/assets/images/activeplay.png');}
.c-voice-box__btn--play{background-image:url('http://122.112.239.223:13000/xuwenbo/preconception/raw/master/assets/images/pause.png')}
