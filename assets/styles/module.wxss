/**
 * 颜色
 */
.s-primary {color: #1CA053;}

/**
 * 滚动容器
 */
.m-scroll-container {position: fixed; left: 0; right: 0; bottom: 0; top: 0;}

/**
 * 按钮
 */
.u-button{display:inline-block;height:50rpx;padding:0 5rpx;line-height:50rpx;font-size:44rpx;border-radius:4rpx;color:#fff;background:#999;}
.u-button--primary{background:#3484C2;}

/**
 * 分页提示
 */
.m-page-tips {display: flex; padding: 20rpx 0; align-items: center; justify-content: center;}
.m-page-load {position: relative; display: inline-block; width: 45rpx; height: 45rpx; margin-right: 20rpx;}
.m-page-load__loader {border: 4rpx #ccc solid; border-left: 4rpx #999 solid; animation: rotate 1.1s infinite linear; transform:  translateZ(0);}
.m-page-load__loader,
.m-page-load__loader::after {position: relative; display: inline-block; z-index: 222; width: 100%; height: 100%; border-radius: 50%;}
@keyframes rotate {
    0%{
        transform:rotate(0deg);
    }
    100%{
        transform:rotate(360deg);
    }
}

/* 字体颜色 */
.font-color--blue{color:#3484C2;}
.font-color--green{color:#1CA053;}
.font-color--red{color:#FF3356;}
