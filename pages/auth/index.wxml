<!--  <view wx:else>请升级微信版本</view>-->

  <view wx:if="{{showGetInfo}}">
    <view style="color: #909090;font-size: 14px;height:300px;width: 100%;text-align: center;display: flex;justify-content: flex-end;margin-bottom: 50px;flex-direction: column">运行微信授权后，可体验更多功能</view>
    <button style="color: white;background: #3ab203;margin: 0 20px" wx:if="{{canIUse}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">授权登录</button>
  </view>
  <mp-dialog wx:if="{{!showGetInfo&&showLogin}}"
    title="绑定每一课账号"
    show="{{true}}"
    bindbuttontap="handleLogin"
    mask-closable="{{!showLogin}}"
    buttons="{{buttons}}"
  >
    <view>
      <view class="section">
      <i></i>
        <input placeholder="请输入账号" bindinput="usernameHander" class="login-ipt"/>
      </view>
      <view class="section">
      <i></i>
        <input placeholder="请输入密码" bindinput="passwordHander" type="password" class="login-ipt" auto-focus/>
      </view>
    </view>
  </mp-dialog>
</view>
