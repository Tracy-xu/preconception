/* pages/exercises/index.wxss */
.c-exercises{display:flex;flex-direction:column;position:fixed;top:0;bottom:0;left:0;right:0;}
.c-exercises-main{min-height:350rpx;margin-bottom:20rpx;padding:20rpx;background:#fff;}
.c-exercises-main__text{font-size:51rpx;color:#517B39;}
.c-exercises-con{flex:1;background:#fff;overflow:auto;}
.c-exercises-con__imgs{margin:30rpx 71rpx;}
.c-exercises-con__textarea{width:660rpx;padding:30rpx;min-height:310rpx;line-height:40rpx;font-size:46rpx;margin:30rpx auto 0;border:2rpx solid #d9d9d9;border-radius:6rpx;color:#999;}
.c-preview-list__result{padding:0 0 20rpx 0;}
.c-preview-list__img{position:relative;display:inline-block;vertical-align:middle;height:190rpx;line-height:190rpx;width:190rpx;font-size:100rpx;margin:10rpx 14rpx 0 0;border:1px solid #d9d9d9;text-align:center;}
.c-preview-list__img:nth-child(3n){margin-right:0;}
.c-preview-list__img image{width:100%;height:100%;}
.c-preview-list__img .c-icon{position:absolute;line-height:36rpx;top:-18rpx;right:-18rpx;}
.c-preview-list__img .c-voice-box__btn{position:absolute;width:70rpx;height:70rpx;top:50%;left:50%;margin:-35rpx 0 0 -35rpx;}
.c-preview__icon--text{display:inline-block;width:50rpx;height:50rpx;background-size:100% 100%;background-image:url('https://raw.githubusercontent.com/Tracy-xu/myk/master/assets/images/text.png');vertical-align:middle;}
.c-preview__icon--video{display:inline-block;width:66rpx;height:57rpx;background-size:100% 100%;background-image:url('https://raw.githubusercontent.com/Tracy-xu/myk/master/assets/images/picture.png');vertical-align:middle;}
.c-preview__icon--voice{display:inline-block;width:54rpx;height:67rpx;background-size:100% 100%;background-image:url('https://raw.githubusercontent.com/Tracy-xu/myk/master/assets/images/voice.png');vertical-align:middle;}
.c-preview__icon--camera{display:inline-block;width:66rpx;height:62rpx;background-size:100% 100%;background-image:url('https://raw.githubusercontent.com/Tracy-xu/myk/master/assets/images/video.png');vertical-align:middle;}
.c-exercises-con__btns{font-size:40rpx;color:#666;overflow:hidden;padding:0 24rpx;}
.c-exercises-con__btn{float:left;margin-right:29rpx;}
.c-exercises-con__text{position:relative;padding:24rpx;font-size:51rpx;}
.c-exercises-con__text-tit{display:inline-block;color:#14C75E;}
.c-exercises-con__text-con{display:inline-block;color:#5A5A5A;overflow:hidden;}
.c-exercises-con__text .c-icon--edit{position:absolute;right:24rpx;bottom:40rpx;}
.c-exercises-bottom{height:96rpx;line-height:96rpx;background:#f9f9f9;border-top:1rpx solid #e6e6e6;text-align:center;}
.c-exercises-bottom__leftbtn{float:left;width:50%;font-size:46rpx;color:#FFB423;box-sizing:border-box;border-right:1rpx solid #e6e6e6;}
.c-exercises-bottom__rightbtn{float:right;width:50%;color:#14C75E;}